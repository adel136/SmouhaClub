@model IEnumerable<Smouhaclub.Models.TblMember>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    الاسم
                </th>
                <th>
                    كود العضو
                </th>
                <th>
                    رقم الهاتف
                </th>
                <th>
                    البريد الالكتروني
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var id = PublicFunction.EncryptAndConvertToHex(item.MemberId.ToString());
                <tr>
                    <td>
                        @(item.FirstName + " " + item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberCode)
                    </td>
                    <td style="direction:rtl;">
                        @Html.DisplayFor(model => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberEmail)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div> Now Data </div>
}
