<!-- Games -->
<section class="games sec-pad">
    <div class="container">
        <h2 class="main-title">الالعاب الرياضية</h2>
        <div class="row">
            @foreach (var item in Model.tblService)
            {
                var pathPhoto = SettingHelper.GetPublishName() + "/Front/assets/images/blogs/tennis.png";
                <div class="col-lg-3 col-md-6">
                    <div class="box">
                        <div class="images">
                            @if (!String.IsNullOrWhiteSpace(item.ServicePhoto))
                            {
                                pathPhoto = PublicFunction.GetPath(SettingHelper.GetPublishName(), uploadSportsGame[1].Value, item.ServicePhoto);
                            }

                            <img src="@pathPhoto" alt="tennis" />
                        </div>
                        <div class="caption">
                            <p>@item.ServiceName</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</section>

