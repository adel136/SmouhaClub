<!-- Articles -->
<section class="articles sec-pad">
    <div class="container">
        <h2 class="main-title">مقالات و اخبار</h2>
        <div class="articles-caresoul owl-carousel owl-theme">
            @foreach (var item in Model.tblNews)
            {
                string day = "";
                string month = "";
                string year = "";
                string parhPhoto = SettingHelper.GetPublishName() + "/Front/assets/images/blogs/img-blog.png";
                if (!string.IsNullOrWhiteSpace(item.NewsDate.ToString()))
                {
                    var date = PublicFunction.ConvertDate(item.NewsDate.ToString()).ToString("yyyy-MM-dd").Split('-').ToList();
                    day = date[0];
                    month = PublicFunction.GetMonth(Convert.ToInt32(date[1]));
                    year = date[2];
                }
                <div class="news-block">
                    <div class="images">
                        @if (!string.IsNullOrWhiteSpace(item.NewsPhoto))
                        {
                            parhPhoto = PublicFunction.GetPath(SettingHelper.GetPublishName(), uploadPaths[1].Value, item.NewsPhoto);
                        }

                        <img src="@parhPhoto" alt="ss" />
                    </div>
                    <span class="category">تنس الريشة</span>
                    <div class="caption">
                        <div class="date">@day @month @year </div>
                        <h3>@item.NewsTitle</h3>
                        <p>@item.NewsContent</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
